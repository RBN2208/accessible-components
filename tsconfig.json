{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    /*"baseUrl": "./src", // This specifies the base directory for your imports
    "paths": {
      "@components/*": ["components/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }*/
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
